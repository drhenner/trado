ready = function()
{
    trado.tracking.init();
    trado.modal.loading('.checkout_order', '#checkoutOrderModal');
    trado.modal.loading('.confirm_order', '#confirmOrderModal');
    trado.modal.open('.estimate-delivery-service-price', '#estimateDeliveryModal');
    trado.animation.loadingSettings();
    trado.animation.loadingForm();
    trado.app.updatePrice('/product/skus/?sku_id=', '&accessory_id=', '#cart_item_sku_id', '#cart_item_cart_item_accessory_accessory_id');
    trado.app.updatePrice('/product/accessories/?accessory_id=', '&sku_id=', '#cart_item_cart_item_accessory_accessory_id', '#cart_item_sku_id');
    trado.app.typeahead();
    trado.app.selectDeliveryServicePrice();
    trado.app.updateDeliveryServicePrice();
    trado.app.duplicateAddress();
    trado.app.jsonErrors();
    trado.app.printPage();

    // Reset estimate shipping modal
    $('#estimateDeliveryModal').on('hidden', function () 
    {
        $('.modal select').val("");
        $('.delivery-service-prices .control-group .controls').html("<p class='delivery-service-price-notice'> Select a country to view the available delivery services.</p>");
    });

    var queryParams = trado.misc.getUrlVars();
    if (queryParams['delivery'] === 'active')
    {
        $('#estimateDeliveryModal').modal('show');
    }

    // Open specific tab when using an anchor ID
    var url = document.location.toString();
    if (url.match('#')) 
    {
        $('.nav-tabs a[href=#'+url.split('#')[1]+']').tab('show') ;
    }

    // Link between tabs
    $('[data-tab-link=true]').click(function() 
    {
        $elem = $(this).attr('data-tab-target');
        $('#myTab a[href="#' + $elem + '"]').tab('show');
        $('body').animate({
            scrollTop: ($('.nav-tabs').offset().top-60)
        }, 500);
        return false;
    });     

    // Initialise floating sidebar for checkout order summary
    $('.checkout-container .content, .checkout-container .sidebar').theiaStickySidebar(
    {
        additionalMarginTop: 65
    });

    // Initialise tooltips
    $('[data-toggle=tooltip]').tooltip();

    $('body').on('click', '.checkbox label', function()
    {
        var $checkbox = $(this).parent().find('input');
        $checkbox.prop('checked', !$checkbox[0].checked);
        if ($checkbox[0].checked) 
        {
            $('.copy-billing').each(function() 
            {
                fieldValue = $(this).val();
                fieldAttribute = $(this).attr('data-field-name');
                $('[data-field-name="delivery-' + fieldAttribute + '"]').val(fieldValue).trigger('change');
            });
        } 
        else 
        {
            return $('[data-field-name*="delivery-"').val('');
        }
    });
};
$(document).ready(ready);

$(document).ajaxComplete(function()
{
    trado.modal.open('.notify_me', '#notifyMeModal');
    trado.animation.loadingSettings();
    trado.app.selectDeliveryServicePrice();
    trado.app.jsonErrors();
});
    

