.cart
  %p.items
    Cart
    %span.dark-clr
      (
      = current_cart.cart_items.sum('quantity')
      )
  .hidden-tablet
    = Store::Price.new(current_cart.total_price).markup
  = link_to new_order_path, :class => 'btn btn-danger' do
    %i.fa.fa-shopping-cart
.open-panel
  - if current_cart.cart_items.empty?
    .item-in-cart.clearfix
      .desc
        %strong
          %p You have no items in your cart.
  - else 
    - current_cart.cart_items.each do |item|
      .item-in-cart.clearfix
        .image
          = link_to (image_tag item.sku.product.attachments.first.file.square, :alt => item.sku.product.name, :height => 124, :width => 124), [item.sku.product.category, item.sku.product]
        .desc
          %strong
            = link_to item.sku.product.name, [item.sku.product.category, item.sku.product]
          %div
            = sku_attribute_values(item.sku, item.sku.product.single)
            - unless item.cart_item_accessory.blank?
              = "<i class='icon-power-cord'></i> #{item.cart_item_accessory.accessory.name}".html_safe
          %span.light-clr.qty
            Qty:
            = item.quantity
            \Â 
            = link_to item, :method => :delete, :remote => true, :title => 'Remove item' do
              %i.fa.fa-times-circle
        .price
          %strong= Store::Price.new(item.total_price).format
    .summary
      - if Store::settings.tax_breakdown
        .line
          .row-fluid
            .span6 Subtotal
            .span6.align-right= Store::Price.new(current_cart.total_price, 'net').format
        .line
          .row-fluid
            .span6= "#{Store::settings.tax_name} (#{Store::settings.tax_rate}%):"
            .span6.align-right= Store::Price.new((current_cart.total_price*Store::tax_rate)).format
      .line
        .row-fluid
          .span6 Total
          .span6.align-right.size-16= Store::Price.new(current_cart.total_price, 'gross').format
    .proceed
      = link_to new_order_path, :class => 'btn btn-danger pull-right bold higher' do
        View cart
        %i.fa.fa-shopping-cart
      %span
        Shipping costs are calculated based on location
        %br
        = link_to 'More information', delivery_path