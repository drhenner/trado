#delivery-service-form.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "deliveryServiceModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      %form{"accept-charset" => "UTF-8", action: "/admin/delivery_services/set_countries", "data-remote" => "true", method: "post", role: "form"}
        %div{style: "display:none"}
          %input{name: "utf8", type: "hidden", value: "âœ“"}/
          %input{name: "_method", type: "hidden", value: "post"}/
        #errors.json
          %ul
        .modal-header
          %h3#orderModalLabel
            Copy delivery service countries
        .modal-body
          %fieldset.widget.widget-content.widget-last
            %p Select which delivery service you would like to copy the country list from:
            .form-group.form-last
            = select_tag :delivery_service_id, options_for_select(@delivery_services.map { |delivery_service| [delivery_service.full_name, delivery_service.id ] }), prompt: "Select a delivery service...", :class => 'form-control'
        .modal-footer
          %button.btn.btn-orange.btn-large{"data-dismiss" => "modal", type: "button"} Close
          = submit_tag 'Submit', :class => 'btn btn-blue btn-large'