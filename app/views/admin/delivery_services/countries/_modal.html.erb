<div aria-hidden="true" aria-labelledby="deliveryServiceModalLabel" class="modal fade" id="delivery-service-form" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div id="errors" class="json">
        <ul>
        </ul>
      </div>
      <div class="modal-header">
        <h3 id="orderModalLabel">
          Copy delivery service countries
        </h3>
      </div>
      <div class="modal-body">
        <p>Select which delivery service you would like to copy the country list from:</p>
        <div class="form-group form-last"></div>
        <%= select_tag :delivery_service_id, options_for_select(delivery_services.map { |delivery_service| [delivery_service.full_name, delivery_service.id ] }), prompt: "Select a delivery service...", :class => 'form-control' %>
      </div>
      <div class="modal-footer">
        <button class="btn btn-orange btn-large" data-dismiss="modal" type="button">Close</button>
        <a href="#" id="set-countries" class="btn btn-blue btn-large">Submit</a>
      </div>
    </div>
  </div>
</div>