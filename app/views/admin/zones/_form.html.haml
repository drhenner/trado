.eightcol
  .page-header
    %h2.widget.widget-header= "#{yield :breadcrumb} zone"
  = form_for [:admin, @zone], :html => { :role => 'form' } do |f|
    - if @zone.errors.any?
      #errors
        %ul
          - @zone.errors.full_messages.each do |msg|
            %li
              %i.icon-cancel-circle
              = msg  
    %fieldset.widget.widget-content.widget-last
      .form-group
        = f.label :name
        = f.text_field :name, :class => 'form-control'
      .form-group.form-last
        = f.label 'Countries'
        - if @countries.empty?
          %p No zones to select.
        - else
          = f.collection_check_boxes :country_ids, @countries, :id, :name, checked: @zone.countries.map(&:id) do |c|
            .checkbox.blocked
              %label
                = c.check_box
                = c.label
    .form-action
      = f.submit 'Submit', :class => 'btn btn-blue btn-large'
.fourcol.last