- content_for :title, 'Zones'
- content_for :breadcrumb, 'Zones'

.twelvecol
  .page-header
    = link_to new_admin_zone_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Add zone" do
      %i.icon-plus
    = link_to admin_zones_countries_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Countries" do
      %i.icon-earth
    %h2.widget.widget-header Zones
  - if @zones.empty?
    %p You don't have any zones yet.
  - else
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th Name
            %th Countries
            %th
        %tbody
          - @zones.each do |zone|
            %tr
              %td= zone.name
              %td
                %ul 
                  - zone.countries.each do |country|
                    %li
                      = country.name
              = table_commands zone, admin_zone_path(zone), edit_admin_zone_path(zone), admin_zone_path(zone), 0
