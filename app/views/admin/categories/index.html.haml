- content_for :title, 'Categories'
- content_for :breadcrumb, 'Categories'

.twelvecol
  .page-header
    = link_to new_admin_category_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Add category" do
      %i.icon-plus
    %h2.widget.widget-header Categories
  - if @categories.empty?
    %p You don't have any categories yet.
  - else
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th Name
            %th Description
            %th Sorting
            %th Active
            %th No. of products
            %th
        %tbody
          - @categories.each do |category|
            %tr
              %td= link_to category.name, category
              %td= category.description
              %td= category.sorting
              %td= category.active ? "<i class='icon-checkmark icon-green'></i>".html_safe : "<i class='icon-close icon-red'></i>".html_safe
              %td= category.products.count
              = table_commands category, category, edit_admin_category_path(category), admin_category_path(category), 0
