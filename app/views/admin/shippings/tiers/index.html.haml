- content_for :title, 'Shipping method tiers'
- content_for :breadcrumb, 'Tiers'
- breadcrumb_add 'Shipping methods', admin_shippings_path

.twelvecol
  .page-header
    = link_to new_admin_shippings_tier_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Add tier" do
      %i.icon-plus
    %h2.widget.widget-header Tiers
  - if @tiers.empty?
    %p You don't have any tiers yet.
  - else
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th ID
            %th Length (mm)
            %th Weight (g)
            %th Thickness (mm)
            %th Shipping method(s)
            %th
        %tbody
          - @tiers.each do |tier|
            %tr
              %td= tier.id
              %td= "#{tier.length_start} - #{tier.length_end}"
              %td= "#{tier.weight_start} - #{tier.weight_end}"
              %td= "#{tier.thickness_start} - #{tier.thickness_end}"
              %td
                %ul 
                  - tier.shippings.active.each do |shipping|
                    %li
                      = shipping.name
                      = ' - '
                      %b= Store::Price.new(shipping.price, 'net').format
              = table_commands tier, tier, edit_admin_shippings_tier_path(tier), admin_shippings_tier_path(tier), 0