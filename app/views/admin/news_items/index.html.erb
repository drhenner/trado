<% content_for :title, 'News' %>
<% content_for :breadcrumb, 'News' %>

<div class="twelvecol">
  <div class="page-header">
    <%= link_to new_admin_news_item_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Add news item" do %>
      <i class="icon-plus"></i>
    <% end %>
    <h2 class="widget widget-header">News</h2>
  </div>
  <% if @news_items.empty? %>
    <div class="widget widget-content">
      <div class="helper-notification">
        <p>You don't have any news items yet.</p>
        <i class="icon-newspaper"></i>
      </div>
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Headline</th>
            <th>Published date</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @news_items.each do |news_item| %>
            <tr>
              <td>
                <%= news_item.headline %>
              </td>
              <td>
                <%= news_item.published_date.strftime('%d/%m/%Y') %>
              </td>
              <%= table_actions [:admin, news_item], "edit", "delete" %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
