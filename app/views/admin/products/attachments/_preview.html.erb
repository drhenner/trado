<div aria-hidden="true" aria-labelledby="attachmentPreviewModalLabel" class="modal fade" id="attachment-preview-form" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <h3 id="attachmentPreviewModalLabel">
            <%= @attachment.file.filename %>
          </h3>
        </div>
        <div class="modal-body modal-align-center">
          <%= image_tag @attachment.file.large %>
        </div>
        <div class="modal-footer">
          <button class="btn btn-orange btn-large" data-dismiss="modal" type="button">Close</button>
        </div>
    </div>
  </div>
</div>