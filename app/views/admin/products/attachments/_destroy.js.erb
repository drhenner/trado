<% unless @product.attachments.empty? %>
    $('#attachments').html('<% @product.attachments.each do |attach| %><%=j render partial: "admin/products/attachments/single", locals: { attachment: attach } %><% end %>');
<% else %>
    $('#attachments').html('<p>You currently have no attachments for this product.</p>');
<% end %>
trado.animation.alert(
    '.attachment-heading',
    'success',
    'attachment-destroy-alert',
    '<i class="icon-checkmark-circle"></i>Successfully deleted the attachment.',
    3500
)