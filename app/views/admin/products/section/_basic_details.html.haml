.widget-sub-heading
  %h3 Product information
%fieldset.widget.widget-content
  .row
    .twelvecol
      .form-group
        = f.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id ] }, @product.category_id ), { :include_blank => "Please select category..."}, { :class => 'form-control' }
  .row
    .fourcol
      .form-group
        = f.label :part_number
        = f.text_field :part_number, :class => 'form-control'
    .fourcol
      .form-group
        = f.label :sku
        = f.text_field :sku, :class => 'form-control'
    .fourcol.last
      .form-group
        = f.label :name
        = f.text_field :name, :class => 'form-control'
    .fourcol
      .form-group
        = f.label :meta_description
        = f.text_field :meta_description, :class => 'form-control'
    .fourcol
      .form-group
        = f.label :weighting
        = f.text_field :weighting, :class => 'form-control'
    .fourcol.last
  .row
    .twelvecol
      .form-group
        = f.label :short_description
        = f.text_area :short_description, :rows => 8, :class => 'form-control redactor'
  .row
    .twelvecol
      .form-group
        = f.label "Technical details"
        = f.text_area :specification, :rows => 8, :class => 'form-control redactor'
  .row
    .twelvecol
      .form-group.form-last
        = f.label "Product description"
        = f.text_area :description, :rows => 8, :class => 'form-control redactor'
.widget-sub-heading
  %h3 Product options
%fieldset.widget.widget-content
  .row
    .twelvecol
      .checkbox
        %label
          = f.check_box :featured
          Featured
      .checkbox
        %label
          = f.check_box :single
          Single product
