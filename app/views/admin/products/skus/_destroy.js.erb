<% unless @product.skus.active.empty? %>
    $("tr#sku_<%= params[:id] %>").remove();
<% else %>
    $('#add-sku-button').addClass('hide');
    $('#skus').html('<div class="helper-notification"><p>You do not have any SKU variants for this product.</p><i class="icon-tags"></i></div>')
<% end %>
soca.animation.alert(
    '#skus',
    'success',
    'sku-destroy-alert',
    '<i class="icon-checkmark-circle"></i>Successfully deleted the SKU.',
    3500
)