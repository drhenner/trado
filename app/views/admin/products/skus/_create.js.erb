$('#sku-form').modal('hide');
<% if @product.skus.count == 1 %>
    $('.sku-heading + .label-orange').remove();
    $('.sku-heading').after('<%=j render "admin/products/skus/table" %>');
<% else %>
    $('tbody#sku-fields').html('<% @form_sku.product.skus.each do |sku| %><tr id=\'sku_<%= sku.id %>\'><%=j render partial: "admin/products/skus/single", locals: { sku: sku } %></tr><% end %>');
<% end %>
soca.animation.alert(
    '.sku-heading',
    'success',
    'sku-create-alert',
    '<i class="icon-checkmark-circle"></i>Successfully created a SKU.',
    3500
)