.threecol
  %h3 Accessory details
  %p Set the name and part number for your accessory.
.ninecol.last
  %fieldset.widget.widget-content
    .form-group
      = f.label :name
      = f.text_field :name, :class => 'form-control'
    .form-group
      = f.label :part_number
      = f.text_field :part_number, :class => 'form-control'
.threecol
  %h3 Weight & price
  %p Set the weight, net price and original cost value for your accessory.
.ninecol.last
  %fieldset.widget.widget-content.widget-last
    .form-group
      = f.label 'Weight (g)'
      = f.text_field :weight, :class => 'form-control'
    .form-group
      = f.label :cost_value
      = f.text_field :cost_value, :class => 'form-control calculate-tax', autocomplete: 'off'
    .form-group.form-last
      = f.label 'Net price'
      = f.text_field :price, :class => 'form-control calculate-tax', autocomplete: 'off'
  .form-action
    = f.submit 'Submit', :class => 'btn btn-blue btn-large'