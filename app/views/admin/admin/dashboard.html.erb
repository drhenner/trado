<% content_for :title, 'Dashboard' %>
<% content_for :breadcrumb, 'Dashboard' %>

<div class="twelvecol">
    <div class="page-header">
        <h2 class="widget widget-header">Dashboard</h2>
    </div>
    <div class="widget-sub-heading">
        <h3>Orders</h3>
    </div>
    <div class="widget widget-content">
        <div class="row">
            <div class="twelvecol">
                <canvas id="lineChart" width="1140" height="400" class="line-chart"></canvas>
            </div>
        </div>
        <div class="row">
            <div class="fourcol">
                <div class="single-stat">
                    <div class="green-stat"><%= @dashboard[:completed] %></div>
                    <div>Completed</div>
                </div>
            </div>
            <div class="fourcol">
                <div class="single-stat">
                    <div class="orange-stat"><%= @dashboard[:pending] %></div>
                    <div>Pending</div>
                </div>
            </div>
            <div class="fourcol last">
                <div class="single-stat">
                    <div class="red-stat"><%= @dashboard[:failed] %></div>
                    <div>Failed</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="eightcol">
            <div class="widget-sub-heading">
                <h3>Revenue</h3>
            </div>
            <div class="widget widget-content">
                <div class="row">
                    <div class="fourcol">
                        <div class="single-stat price-stat">
                            <div class="green-stat"><%= Store::Price.new(price: @dashboard[:gross_total]).single %></div>
                            <div>Gross income</div>
                        </div>
                    </div>
                    <div class="fourcol">
                        <div class="single-stat price-stat">
                            <div class="purple-stat"><%= Store::Price.new(price: @dashboard[:net_total]).single %></div>
                            <div>Net income</div>
                        </div>
                    </div>
                    <div class="fourcol last">
                        <div class="single-stat price-stat">
                            <div class="blue-stat"><%= Store::Price.new(price: @dashboard[:tax_total]).single %></div>
                            <div>Tax</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="fourcol last">
            <div class="widget-sub-heading">
                <h3>Transactions</h3>
            </div>
            <div class="widget widget-content">
                <div class="row">
                    <div class="twelvecol">
                        <canvas id="pieChart" width="300" height="300" class="pie-chart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>