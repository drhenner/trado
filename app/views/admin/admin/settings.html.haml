- content_for :title, 'Profile'
- content_for :breadcrumb, 'Profile'
- javascript 'redactor-rails'

.eightcol
  .page-header
    %h2.widget.widget-header Profile
  = form_for @settings, :url => admin_settings_update_path, :html => { :role => 'form' } do |f|
    - if @settings.errors.any?
      #errors
        %ul
          - @settings.errors.full_messages.each do |msg|
            %li
              %i.icon-cancel-circle
              = msg  
    %fieldset.widget.widget-content
      .form-group
        = f.label 'Store name'
        = f.text_field :name, :class => 'form-control'
      .form-group
        = f.label 'Store email address'
        = f.text_field :email, :class => 'form-control'
      = f.fields_for :attachment do |ff|
        .form-group
          = ff.label "Store logo"
          %div= image_tag @settings.attachment.file.square, :width => 75, :height => 75
          %div= ff.file_field :file
      .form-group.form-last
        = f.label 'Currency unit'
        = f.text_field :currency, :class => 'form-control'
    .widget-sub-heading
      %h3 Tax
    %fieldset.widget.widget-content
      .form-group
        = f.label 'Name'
        = f.text_field :tax_name, :class => 'form-control'
      .form-group
        = f.label 'Rate'
        = f.text_field :tax_rate, :class => 'form-control'
      %p If you would like your customers to view your product prices without tax and view the tax total in the checkout process, then please select the checkbox below.
      .form-group
        .checkbox
          %label
            = f.check_box :tax_breakdown
            Breakdown
    .widget-sub-heading
      %h3 Google Analytics
    %fieldset.widget.widget-content
      .form-group
        .checkbox
          %label
            = f.check_box :ga_active
            Active
      .form-group.form-last
        = f.label 'Web tracking code'
        = f.text_field :ga_code, :class => 'form-control'
    .widget-sub-heading
      %h3 Payment options
    %fieldset.widget.widget-content.widget-last
      %p Please select the following payment options you would like to offer for your store (PayPal is automatically turned on).
      .form-group
        .checkbox
          %label
            = f.check_box :cheque
            Cheque
      .form-group
        .checkbox
          %label
            = f.check_box :bank_transfer
            Bank transfer
    .widget-sub-heading
      %h3 Alert
    %fieldset.widget.widget-content
      .form-group
        .checkbox
          %label
            = f.check_box :alert_active
            Active
      .form-group
        .checkbox
          %label
            = f.radio_button :alert_type, 'warning'
            Medium
        .checkbox
          %label
            = f.radio_button :alert_type, 'danger'
            High
      .form-group.form-last
        = f.label 'Message'
        = f.text_area :alert_message, rows: 8, :class => 'form-control redactor'
    .form-action
      = f.submit 'Submit', :class => 'btn btn-blue btn-large'
.fourcol.last