<div aria-hidden="true" aria-labelledby="orderModalLabel" class="modal fade" id="order-form" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for [:admin, @order], html: { role: 'form', method: :patch, id: @order.id }, remote: true, format: :json do |f| %>
        <div class="json" id="errors">
          <ul></ul>
        </div>
        <%= render partial: 'shared/loading', format: [:html] %>
        <div class="modal-header">
          <h3 id="orderModalLabel">
            Edit Order
            <%= "##{@order.legacy_order_id}" %>
          </h3>
        </div>
        <div class="modal-body">
          <fieldset class="widget widget-content widget-last">
            <div class="form-group">
              <%= f.label 'Dispatch Date' %>
              <%= f.text_field :shipping_date, class: 'form-control datetimepicker', value: (@order.shipping_date.strftime('%d/%m/%Y %I:%M%p') unless @order.shipping_date.nil?) %>
            </div>
            <div class="form-group">
              <%= f.label :actual_shipping_cost %>
              <div class="form-prefix">
                <span><%= Store.settings.currency %></span>
                <%= f.text_field :actual_shipping_cost, :class => 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :consignment_number %>
              <%= f.text_field :consignment_number, :class => 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label 'Invoice Id' %>
              <%= f.text_field :invoice_id, :class => 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :override_delivery_name %>
              <%= f.text_field :override_delivery_name, :class => 'form-control' %>
            </div>
            <div class="form-group form-last">
              <%= f.label :override_delivery_tracking %>
              <%= f.text_field :override_delivery_tracking, :class => 'form-control' %>
            </div>
          </fieldset>
        </div>
        <div class="modal-footer">
          <button class="btn btn-orange btn-large" data-dismiss="modal" type="button">Close</button>
          <%= f.submit 'Submit', :class => 'btn btn-blue btn-large' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
