<% content_for :title, "Order ##{@order.legacy_order_id}" %>
<% content_for :breadcrumb, "##{@order.legacy_order_id}" %>
<% breadcrumb_add 'Orders', admin_orders_path %>

<div class="twelvecol">
  <div class="page-header">
    <% if @order.active? %>
      <%= link_to cancel_admin_order_path(@order), :class => "btn btn-red btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: "Cancel Order", method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="icon-close"></i>
      <% end %>
    <% end %>
    <h2 class="widget widget-header">
      <%= "Order ##{@order.legacy_order_id}" %><span><%= " / Invoice ##{@order.invoice_id}" if @order.invoice_id.present? %></span>
    </h2>
  </div>
</div>
<div class="row">
  <div class="fourcol">
    <div class="widget-sub-heading">
      <h3>Shipping details</h3>
    </div>
    <div class="widget widget-content">
      <ul>
        <li>
          <i class="icon-envelop"></i>
          <b>Email</b>:
          <%= @order.email %>
        </li>
        <li>
          <i class="icon-location"></i>
          <b>Status</b>:
          <%= status_label @order, @order.shipping_status %>
        </li>
        <li>
          <i class="icon-calendar"></i>
          <b>Dispatch date</b>:
          <%= @order.shipping_date.strftime(" #{@order.shipping_date.day.ordinalize} %b %Y") unless @order.shipping_date.nil?  %>
        </li>
        <li>
          <i class="icon-coin"></i>
          <b>Actual shipping cost</b>:
          <%= Store::Price.new(price: @order.actual_shipping_cost, tax_type: 'net').single unless @order.actual_shipping_cost.nil? %>
        </li>
        <li>
          <i class="icon-airplane"></i>
          <b>Delivery option:</b>
          <%= @order.delivery.full_name %>
        </li>
        <% unless @order.consignment_number.nil? || @order.delivery_service.tracking_url.nil? %>
          <li>
            <i class="icon-target"></i>
            <b>Tracking:</b>
            <%= link_to @order.consignment_number, Store.tracking_url(@order.delivery_service.tracking_url, @order.consignment_number), target: '_blank' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="fourcol">
    <div class="widget-sub-heading">
      <h3>Billing address</h3>
    </div>
    <div class="widget widget-content">
      <%= @order.billing_address.full_name %>
      <br/>
      <%= @order.billing_address.company %>
      <br/>
      <%= @order.billing_address.address %>
      <br/>
      <%= @order.billing_address.city %>
      <br/>
      <%= @order.billing_address.postcode %>
      <br/>
      <%= @order.billing_address.country %>
      <br/>
      <br/>
      <%= @order.billing_address.telephone %>
      <br/>
    </div>
  </div>
  <div class="fourcol last">
    <div class="widget-sub-heading">
      <h3>Delivery address</h3>
    </div>
    <div class="widget widget-content">
      <%= @order.delivery_address.full_name %>
      <br/>
      <%= @order.delivery_address.company %>
      <br/>
      <%= @order.delivery_address.address %>
      <br/>
      <%= @order.delivery_address.city %>
      <br/>
      <%= @order.delivery_address.postcode %>
      <br/>
      <%= @order.delivery_address.country %>
      <br/>
      <br/>
      <%= @order.delivery_address.telephone %>
      <br/>
    </div>
  </div>
</div>
<div class="row">
  <div class="twelvecol">
    <div class="widget-sub-heading">
      <h3>Order items</h3>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover table-margin">
        <thead>
          <tr>
            <th>Item</th>
            <th>SKU</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |item| %>
            <tr>
              <td>
                <%= link_to item.sku.product.name, [item.sku.product.category, item.sku.product] %>
                <div class="item-sub">
                  <%= render_variants(item.sku) unless item.sku.product.single? %>
                </div>
                <% unless item.order_item_accessory.nil? %>
                  <div class="item-sub label label-blue">
                    <%= "<i class='icon-code-fork'></i> #{item.order_item_accessory.accessory.name}".html_safe %>
                  </div>
                <% end %>
              </td>
              <td>
                <%= item.sku.full_sku %>
              </td>
              <td>
                <%= Store::Price.new(price: item.price, tax_type: 'net').single %>
              </td>
              <td>
                <%= item.quantity %>
              </td>
              <td>
                <%= Store::Price.new(price: item.total_price, tax_type: 'net').single %>
              </td>
            </tr>
          <% end %>
          <tr>
            <td class="align-right border-top" colspan="4">
              <b>Subtotal:</b>
            </td>
            <td class="border-top">
              <%= Store::Price.new(price: @order.net_amount, tax_type: 'net').single %>
            </td>
          </tr>
          <tr>
            <td class="align-right" colspan="4">
              <b>Delivery:</b>
            </td>
            <td>
              <%= Store::Price.new(price: @order.delivery.price, tax_type: 'net').single %>
            </td>
          </tr>
          <tr>
            <td class="align-right" colspan="4">
              <b>Tax:</b>
            </td>
            <td>
              <%= Store::Price.new(price: @order.tax_amount, tax_type: 'net').single %>
            </td>
          </tr>
          <tr class="focused">
            <td class="align-right" colspan="4">
              <b>Total:</b>
            </td>
            <td>
              <%= Store::Price.new(price: @order.gross_amount, tax_type: 'net').single %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="widget-sub-heading transaction-heading">
      <h3>Transactions</h3>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover table-last">
        <thead>
          <tr>
            <th>Transaction Type</th>
            <th>Payment type</th>
            <th>PayPal ID</th>
            <th>Payment status</th>
            <th>Error code</th>
            <th>Fee</th>
            <th>Net amount</th>
            <th>Gross amount</th>
            <th>Last updated</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order.transactions.each do |transaction| %>
            <tr id="transaction_<%= transaction.id %>">
              <%= render partial: 'admin/orders/transactions/single', format: [:html], locals: { transaction: transaction } %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="transaction-modal"></div>
