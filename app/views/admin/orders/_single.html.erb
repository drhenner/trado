<td>
  <%= order.legacy_order_id %>
</td>
<td>
  <%= order.invoice_id %>
</td>
<td>
  <%= order.billing_address.full_name %>
</td>
<td>
  <% if order.latest_transaction.paypal_id.nil? %>
    -
  <% else %>
    <%= link_to(order.latest_transaction.paypal_id, "#{Rails.application.secrets.transaction_link}#{order.latest_transaction.paypal_id}", target: '_blank') %>
  <% end %>
</td>
<td>
  <%= order_delivery_label order, order.shipping_status %>
</td>
<td>
  <%= transaction_status_label order.latest_transaction, order.latest_transaction.payment_status %>
</td>
<td>
  <%= Store::Price.new(price: order.gross_amount, tax_type: 'net').single %>
</td>
<td>
  <%= order.updated_at.strftime('%d/%m/%Y at %I:%M%p') %>
</td>
<%= table_actions [:admin, order], 'show', 'remote-edit' %>