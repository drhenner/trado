<%  @accessory_price = Accessory.where('id = ?', params[:accessory_id]).pluck(:price).first ? Accessory.where('id = ?', params[:accessory_id]).pluck(:price).first : 0
    @sku = Sku.find(params[:sku_id]) %>
$('.product-title .price').html('<%= format_currency (@sku.price+@accessory_price) %>');
<% if Store::settings.tax_breakdown %>
    $('.product-title .gross_price').html('<%= gross_price (@sku.price+@accessory_price) %> inc. <%= Store::settings.tax_name %>'); 
<% end %>