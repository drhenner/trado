- if @new_shippings.nil? || @new_shippings.empty?
    %p.shipping-notice Sorry, we do not ship to this country. Please check out our delivery and returns page for more information.
    = hidden_field_tag "order[shipping_id]", nil
- else
    - @new_shippings.each_with_index do |shipping, index|
        %div.option
            = hidden_field_tag "order[shipping_id]", nil
            - if index == 0
                = radio_button_tag "order[shipping_id]", shipping.id, :checked => 'checked'
            - else
                = radio_button_tag "order[shipping_id]", shipping.id
            %h5= shipping.name
            %p= shipping.description
            %h6= format_currency(shipping.price)