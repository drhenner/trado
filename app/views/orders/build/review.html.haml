- content_for :title, "Review your order"
.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container
        .row
          .span10.offset1
            = render partial: 'shared/flash/store'
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Review
                      shopping cart
                .span2
            / ==========
            / = Steps =
            / ==========
            .checkout-steps
              .clearfix
                .step.active
                  .step-badge 1
                  Review cart
                .step
                  .step-badge 2
                  Billing details
                .step
                  .step-badge 3
                  Shipping address
                .step
                  .step-badge 4
                  Payment method
                .step
                  .step-badge 5
                  Confirm & pay
            / /steps
            / ==========
            / = Selected Items =
            / ==========
            
            - if @cart.cart_items.empty?
              .table.table-items
                %h4 Your cart is empty
            - else
              %table.table.table-items
                %thead
                  %tr
                    %th{colspan: "2"} Item
                    %th
                      .align-center Quantity
                    %th
                      .align-right Price
                    %th
                      .align-right Total
                %tbody
                  = render :partial => 'orders/cart'
            %hr/
            - unless @cart.cart_items.empty?
              %p.right-align
                %a.btn.higher.bold#estimate-delivery-service-price Estimate shipping
                = link_to "Continue", next_wizard_path, :class => 'btn btn-primary higher bold'
    / /main content
/ /container
= render partial: 'orders/delivery_service_prices/estimate/modal', format: [:html]
= render partial: 'carts/cart_items/validate/modal', format: [:html]
