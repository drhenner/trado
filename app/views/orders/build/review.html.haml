- content_for :title, "Review your order"

.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container
        .row
          .span10.offset1
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Review
                      order
                .span2
                  .right-align
                    = image_tag 'webmarket/buttons/security.jpg', :alt => 'Security', :width => 92, :height => 65
            / ==========
            / = Steps =
            / ==========
            .checkout-steps
              .clearfix
                .step.active
                  .step-badge 1
                  Review order
                .step
                  .step-badge 2
                  Billing address
                .step
                  .step-badge 3
                  Shipping information
                .step
                  .step-badge 4
                  Payment method
                .step
                  .step-badge 5
                  Confirm & pay
            / /steps
            / ==========
            / = Selected Items =
            / ==========
            
            - if @cart.cart_items.empty?
              .table.table-items
                %h4 Your cart is empty
            - else
              %table.table.table-items
                %thead
                  %tr
                    %th{colspan: "2"} Item
                    %th
                      .align-center
                    %th
                      .align-right Price
                %tbody
                  = render :partial => 'orders/cart'
            = form_for @order, :url => wizard_path, :html => { :method => :put, :class => 'form-horizontal form-checkout shipping_address' } do |f|
              .control-group
                = f.label :country, :class => 'control-label' do
                  Country
                  %span.red-clr.bold *
                .controls.update-shipping
                  = select_tag(:country, options_for_select(Country.all.map { |country| [country.name, country.name] }), { :include_blank => 'Please select...'})
              .shipping-methods{ 'data-tier' => "#{@calculated_tier}" }
                .control-group
                  = f.label :shipping_id, :class => 'control-label' do
                    Shipping options
                    %span.red-clr.bold *
                  .controls
                    %p.shipping-notice Select a shipping country to view the available shipping options.
              .control-group
                .controls
                  = errors_for @order, :shipping_id
            %hr/
            - unless @cart.cart_items.empty?
              %p.right-align
                In the next step you will choose your billing address    
                %a.btn.higher.bold#update_quantity UPDATE
                = f.submit "CONTINUE", next_wizard_path, :class => 'btn btn-primary higher bold'
    / /main content
/ /container
