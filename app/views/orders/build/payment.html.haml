- content_for :title, 'Choose a payment method'

.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container.payment-method
        .row
          .span10.offset1
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Payment
                      Method
                .span2
            / ==========
            / = Steps =
            / ==========
            .checkout-steps
              .clearfix
                .step.done
                  .step-badge
                    %i.fa.fa-check
                  = link_to 'Review cart', wizard_path(:review)
                .step.done
                  .step-badge
                    %i.fa.fa-check
                  = link_to 'Billing details', wizard_path(:billing)
                .step.done
                  .step-badge
                    %i.fa.fa-check
                  = link_to 'Shipping address', wizard_path(:shipping)
                .step.active
                  .step-badge 4
                  Payment method
                .step
                  .step-badge 5
                  Confirm & pay
            / /steps
            / ==========
            / = Payment =
            / ==========
            %h5 Please select a payment method from the options below. You will be able to review and confirm your order at the next step.
            %hr/
            = link_to express_order_build_path, :class => 'paypal_checkout paypal' do
              %span.btn.btn-danger.circle.pull-left
                %i.fa.fa-chevron-right
            .shifted-left-45.clearfix
              %h3.no-margin
                %span= link_to 'PayPal', express_order_build_path, :class => 'paypal_checkout'
                = link_to image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), express_order_build_path, :class => 'paypal_checkout'
              %p Speedy, secure and safe transactions with a trusted service.
            %hr/
            - if Store::settings.cheque
              = link_to cheque_order_build_path, :class => 'cheque' do
                %span.btn.btn-danger.circle.pull-left
                  %i.fa.fa-chevron-right
              .shifted-left-45.clearfix
                %h3.no-margin
                  %span= link_to 'Cheque', cheque_order_build_path
                %p Cheque sent within the UK, payable to 'Gimson Robotics'.
              %hr/
            - if Store::settings.bank_transfer
              = link_to bank_transfer_order_build_path, :class => 'bank-transfer' do
                %span.btn.btn-danger.circle.pull-left
                  %i.fa.fa-chevron-right
              .shifted-left-45.clearfix
                %h3.no-margin
                  %span= link_to 'Bank transfer', bank_transfer_order_build_path
                %p Bank transfer from within the UK.
    / /main content
/ /container
#paypalModal.modal.fade{"aria-hidden" => "false", "aria-labelledby" => "paypalModalLabel", role: "dialog", tabindex: "-1"}
  .modal-header
    %h3#paypalModalLabel
      %span.light Redirecting
      To PayPal
  .modal-body
    %p Please wait while we redirect you to PayPal to login securely.
    %div.loading-block
