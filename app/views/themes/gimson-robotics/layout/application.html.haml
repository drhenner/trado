    = stylesheet_link_tag "themes/#{Store::settings.theme.name}/application", "data-turbolinks-track" => true
    = javascript_include_tag "themes/#{Store::settings.theme.name}/application", "data-turbolinks-track" => true 
    %link{href: "/stylesheets/font.css", rel: "stylesheet", media: "screen"}/
  %body
    /[if lt IE 7]
      <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    .master-wrapper
      / ==========
      / = Header =
      / ==========
      %header#header
        .container
          .row
            / ==========
            / = Logo =
            / ==========
            .span6
              = link_to root_path, :class => 'brand' do
                = image_tag 'gimson-robotics_logo.jpg', :alt => Store::settings.name
            .span6.sub-menu
              %ul
                - page_list.each do | page|
                  %li{ :class => "#{active_page?(controller: 'pages', slug: page.slug)} #{'desktop' if page.slug == 'contact'}" }
                    = link_to page.render_menu_title, p_path(slug: page.slug), title: page.title

      / ==========
      / = Main Menu / navbar =
      / ==========
      #stickyNavbar.navbar.navbar-static-top
        .navbar-inner
          .container
            .row
              .span9
                = link_to p_path('contact'), class: 'btn btn-navbar mobile-contact-us mobile' do
                  Contact
                  %i.fa.fa-envelope
                %button.btn.btn-navbar.mobile-menu{"data-target" => ".nav-collapse", "data-toggle" => "collapse", type: "button"}
                  %div Menu
                  %div
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                / ==========
                / = Menu =
                / ==========
                .nav-collapse.collapse
                  %ul#mainNavigation.nav
                    - category_list.each do |category|
                      %li{ :class => active_category?(category.slug) }
                        = link_to category.name, category
                  / ==========
                  / = Search form =
                  / ==========
                  = form_tag search_path, method: :get, :class => 'navbar-form pull-right' do
                    = button_tag(type: 'submit') do
                      %span.icon-search
                    = text_field_tag(:query, params[:query], autocomplete: 'off', tabindex: "1", :class => 'span1', id: 'navSearchInput' )
              / ==========
              / = Cart =
              / ==========
              .span3
                #cartContainer.cart-container
                  = render partial: theme_presenter.page_template_path('carts/popup'), format: [:html]
      / ==========
      / = Main container =
      / ==========
      = yield
      / ==========
      / = Footer =
      / ==========
      %footer
        / ==========
        / ==========
        / = Upper footer =
        .foot-light
          .container
            .row
              .span8
                .main-titles.lined
                  %h3.title
                    %span.light Main
                    Navigation
                %ul.nav
                  %li= link_to 'Home', root_path
                  - page_list.each do | page|
                    %li{ :class => active_page?(controller: 'pages', slug: page.slug) }
                      = link_to page.render_menu_title, p_path(slug: page.slug), title: page.title
              / .span4
              /   .main-titles.lined
              /     %h3.title
              /       %span.light Newsletter
              /       Signup
              /   %p Sign up for our newsletter below
              /   / Begin MailChimp Signup Form
              /   %form.form.form-inline{action: "", method: "post"}
              /     %input.required.email{name: "EMAIL", placeholder: "Enter your e-mail address", type: "email", value: ""}/
              /     %input.btn.btn-primary{name: "subscribe", type: "submit", value: "Send"}/
              /   / End mc_embed_signup
        / /upper footer
        / ==========
        / = Bottom Footer =
        / ==========
        .foot-last
          %a#toTheTop{href: "#"}
            %span.fa.fa-chevron-up
          .container
            .row
              .span6
                = "Â© Copyright #{Date.today.year} #{Store::settings.name}"
        / /bottom footer
      / /footer
