- content_for :title, 'Choose a payment method'

.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container
        .row
          .span10.offset1
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Choose
                      Payment Method
                .span2
                  .right-align
                    = image_tag 'webmarket/buttons/security.jpg', :alt => 'Security', :width => 92, :height => 65
            / ==========
            / = Steps =
            / ==========
            .checkout-steps
              .clearfix
                .step.done
                  .step-badge
                    %i.fa.fa-check
                  = link_to 'Review order', wizard_path(:review)
                .step.done
                  .step-badge
                    %i.fa.fa-check
                  = link_to 'Billing address', wizard_path(:billing)
                .step.done
                  .step-badge
                    %i.fa.fa-check
                  = link_to 'Shipping information', wizard_path(:shipping)
                .step.active
                  .step-badge 4
                  Payment method
                .step
                  .step-badge 5
                  Confirm & pay
            / /steps
            / ==========
            / = Payment =
            / ==========
            = link_to express_order_build_path do
              %span.btn.btn-danger.circle.pull-left
                %i.fa.fa-chevron-right
            .shifted-left-45.clearfix
              %h3.no-margin
                = link_to image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), express_order_build_path, :class => 'paypal_checkout'
              %p Speedy, secure and safe transactions with a trusted service.
            %hr/
    / /main content
/ /container
#paypalModal.modal.fade{"aria-hidden" => "false", "aria-labelledby" => "paypalModalLabel", role: "dialog", tabindex: "-1"}
  .modal-header
    %h3#paypalModalLabel
      %span.light Redirecting
      To PayPal
  .modal-body
    %p Please wait while we redirect you to PayPal to login securely.
    %div.loading-block
