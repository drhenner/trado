#notifyMeModal.modal.fade{"aria-hidden" => "false", "aria-labelledby" => "notifyMeModalLabel", role: "dialog", tabindex: "-1", style: 'display:none;'}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
    %h3#notifyMeModalLabel
      %span.light Notify
      Me
  = form_for notification, url: category_product_sku_notifications_path(sku.product.category, sku.product, sku), html: { method: :post, remote: true, :class => 'remote-form' } do |f|
    .modal-body
      %p 
        Please enter your email address and we'll let you know when the following item is back in stock:
      %p
        %strong
          = sku.product.name 
          = render_variants(sku) unless sku.product.single?
      .control-group
        = f.label :email, :class => 'control-label hidden shown-ie8'
        .controls
          = f.text_field :email, id: 'inputEmail', :class => 'input-block-level', placeholder: 'Email'
    .modal-footer
      = f.submit "Submit", :class => 'btn btn-primary higher'
