$form = $('.contact-form-container form')
// grant access to form fields and stop the loading animation
$form.css('pointer-events', 'auto');
$form.spin(false);
if (!$('.contact-alert').is(':visible')) {
    trado.animation.alert(
        '.contact-form-container article.post',
        'success',
        'contact-alert',
        '<button data-dismiss="alert" class="close" type="button">Ã—</button>Thank your for your message; we will be in contact shortly.',
        5000
    )
}
<% @contact_message = ContactMessage.new %>
$form[0].reset();
$form.find('input').each(function()
{
    if ($(this).parent().hasClass('field-with-errors'))
    {
        $(this).unwrap();
        $(this).next().remove();
    }
});
