- content_for :title, "Shopping Basket"

.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container
        .row
          .span10.offset1
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Shopping
                      Basket
                .span2
            / ==========
            / = Selected Items =
            / ==========
            
            - if current_cart.cart_items.empty?
              .table.table-items
                %h4 Your shopping basket is empty
            - else
              %table.table.table-items
                %thead
                  %tr
                    %th{colspan: "2"} Item
                    %th
                      .align-center Quantity
                    %th
                      .align-right Price
                    %th
                      .align-right Total
                %tbody
                  = render partial: theme_presenter.page_template_path('carts/cart'), format: [:html]
            %hr/
            - unless current_cart.cart_items.empty?
              %p.right-align
                %a.btn.higher.bold.estimate-delivery-service-price Select Delivery Method
                = link_to "Checkout", checkout_carts_path, :class => 'btn btn-primary higher bold', data: { disable_with: 'Please wait...' }
    / /main content
/ /container
= render partial: theme_presenter.page_template_path('carts/delivery_service_prices/estimate/modal'), format: [:html]
