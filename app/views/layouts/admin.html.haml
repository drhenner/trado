!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %title
      = yield :title
      = "- #{Store::settings.name} Administration"
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "text/html; charset=US-ASCII", "http-equiv" => "Content-Type"}/
    = csrf_meta_tag
    = stylesheet_link_tag :administration
    %link{href: "http://fonts.googleapis.com/css?family=Roboto:400,500,700,300", rel: "stylesheet", type: "text/css"}/
    %link{href: "/stylesheets/font.css", media: "screen", rel: "stylesheet"}/
    = javascript_include_tag "modernizr/modernizr"
  %body
    %input#menu-trigger-input.menu-trigger-handler{name: "menu-trigger-input", onclick: "null", type: "checkbox"}/
    #slide-menu.mobile
      %ul
        %li{:class => active_controller?('admin/categories')}
          = link_to admin_root_path do
            %i.icon-lab
            %span Categories
        %li{:class => active_controller?('admin/products')}
          = link_to admin_products_path do
            %i.fa.fa-th-large
            %span Products
        %li{:class => active_controller?('admin/accessories')}
          = link_to admin_accessories_path do
            %i.icon-power-cord
            %span Accessories
        %li{:class => active_controller?('admin/orders')}
          = link_to admin_orders_path do
            %i.icon-cart
            %span Orders
        %li{:class => "#{active_controller?('admin/shippings')} #{active_controller?('admin/shippings/tiers')}"}
          = link_to admin_shippings_path do
            %i.icon-airplane
            %span Shipping
        %li{:class => "#{active_controller?('admin/countries')} #{active_controller?('admin/countries/zones')} #{active_controller?('admin/countries/tax_rates')}"}
          = link_to admin_countries_path do
            %i.icon-earth
            %span Countries
    .all-wrapper
      %header
        #logo.desktop= image_tag Store::settings.attachment.file.square, :width => 60, :height => 60 if Store::settings.attachment
        %label#menu-trigger.mobile{for: "menu-trigger-input", href: "#"}
          %i.icon-menu-2
        .dropdown.user-menu
          - if current_user.attachment
            = image_tag current_user.attachment.file.square, 'data-toggle' => 'dropdown', :width => 40, :height => 40, :href => '#'
          - else 
            %a{'data-toggle' => 'dropdown', :href => '#'}
          %i.fa.fa-caret-up
          %ul.dropdown-menu{"aria-labelledby" => "dLabel", role: "menu"}
            %li
              = link_to './crm' do
                %i.icon-envelop
                CRM
            %li
              = link_to admin_profile_path do
                %i.icon-user
                Profile
            %li
              = link_to admin_settings_path do
                %i.icon-cog
                Settings
            %li
              = link_to destroy_user_session_path, :method => :delete do
                %i.icon-switch
                Logout
      #sidebar.desktop
        %ul
          %li{:class => active_controller?('admin/categories')}
            = link_to admin_root_path, 'data-toggle' => 'tooltip', 'data-placement' => 'right', 'data-original-title' => 'Categories' do
              %i.icon-lab
          %li{:class => active_controller?('admin/products')}
            = link_to admin_products_path, 'data-toggle' => 'tooltip', 'data-placement' => 'right', 'data-original-title' => 'Products' do
              %i.fa.fa-th-large
          %li{:class => active_controller?('admin/accessories')}
            = link_to admin_accessories_path, 'data-toggle' => 'tooltip', 'data-placement' => 'right', 'data-original-title' => 'Accessories' do
              %i.icon-power-cord
          %li{:class => active_controller?('admin/orders')}
            = link_to admin_orders_path, 'data-toggle' => 'tooltip', 'data-placement' => 'right', 'data-original-title' => 'Orders' do
              %i.icon-cart
          %li{:class => "#{active_controller?('admin/shippings')} #{active_controller?('admin/shippings/tiers')}"}
            = link_to admin_shippings_path, 'data-toggle' => 'tooltip', 'data-placement' => 'right', 'data-original-title' => 'Shippings' do
              %i.icon-airplane
          %li{:class => "#{active_controller?('admin/countries')} #{active_controller?('admin/countries/tax_rates')} #{active_controller?('admin/countries/zones')}"}
            = link_to admin_countries_path, 'data-toggle' => 'tooltip', 'data-placement' => 'right', 'data-original-title' => 'Countries' do
              %i.icon-earth
      .main
        .container
          .row
            - if flash[:notice] or flash[:error] or flash[:success]
              %div.alert{:class => (if flash[:success] then "alert-success" elsif flash[:notice] then "alert-info" elsif flash[:error] then "alert-warning" end) }
                = if flash[:success] then "<i class='icon-checkmark-circle'></i>".html_safe elsif flash[:notice] then "<i class='icon-info-2'></i>".html_safe elsif flash[:error] then "<i class='icon-spam'></i>".html_safe end
                = raw flash[:error]
                = raw flash[:notice]
                = raw flash[:success]
            = render_breadcrumbs 0
            = yield

    = javascript_include_tag :administration
    = yield :footer
